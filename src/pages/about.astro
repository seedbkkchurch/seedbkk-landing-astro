import Stats from '~/components/widgets/Stats.astro'
import Steps2 from '~/components/widgets/Steps2.astro'
import Layout from '~/layouts/PageLayout.astro'

const metadata = {
    title: 'About us',
}
---

<Layout metadata={metadata}>
    <!-- Hero Widget ******************* -->

    <Hero
        tagline="About us"
        image={{
            src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
            alt: 'Caos Image',
        }}
    >
        <Fragment slot="title">
            Beginning<br />
            <span class="highlight text-green dark:text-white"> คริสตจักรเมล็ดพันธุ์กรุงเทพฯ</span>
        </Fragment>

        <Fragment slot="subtitle">
            เรื่องราวของการนำทางของพระเจ้าที่ชัดเจน เริ่มต้นจากความห่วงใยในชีวิตของน้องๆ
            นักศึกษาที่เข้ามาเรียนต่อในกรุงเทพฯ และการติดตามดูแลของศิษยาภิบาลและภรรยา
            ที่ไม่ยอมทิ้งให้ใครหลุดหายไปจากทางของพระเจ้า แม้ว่าจะมีช่วงเวลาที่น้องๆ เหล่านั้นห่างหายจากคริสตจักร
            แต่พระเจ้ายังคงทำงานผ่านชีวิตของพวกเขา และนำไปสู่การเริ่มต้นของคริสตจักรเมล็ดพันธุ์กรุงเทพฯ
        </Fragment>
    </Hero>

    <!-- Stats Widget ****************** -->

    <Stats
        title="จากสมาชิกเพียง 4 คน ที่รวมตัวกันด้วยความรักและความเชื่อในพระเจ้า และเติบโตขึ้นเป็น 30 คนภายในเวลาเพียง 2 ปี 90% ของสมาชิกเป็นวัยรุ่นที่มีอายุเฉลี่ยเพียง 22.5 ปี ทำให้คริสตจักรแห่งนี้เป็นคริสตจักรของคนรุ่นใหม่ ที่เต็มไปด้วยพลังและความกระตือรือร้นในการรับใช้พระเจ้า"
        stats={[
            { title: 'Member', amount: '~30' },
            { title: 'Age Avg', amount: '22.5 year' },
            { title: 'Age Chruch', amount: '2 year' },
        ]}
    />

    <!-- Features3 Widget ************** -->

    <Features3
        title="Vision"
        subtitle="การเป็นคริสตจักรที่เติบโตและขยายออกไปในกลุ่มคนรุ่นใหม่ โดยเฉพาะในมหาวิทยาลัยต่างๆ ทั่วกรุงเทพฯ และรังสิต เรามุ่งมั่นที่จะสร้างชุมชนแห่งความเชื่อที่อบอุ่น และช่วยให้คนรุ่นใหม่ได้เติบโตในทางของพระเจ้า"
        columns={2}
        isBeforeContent={true}
        items={[
            {
                title: 'Thailand Shall Be Safe',
                description: 'นำพระพรไปสู่คนไทย เพื่อเปลี่ยนแปลงชีวิตคนไทยให้ดึขึ้น',
                icon: 'tabler:home-shield',
            },
            {
                title: 'Teenatures Shall Be Leaders',
                description:
                    'ปรารถนาที่จะเห็นเยาวชนเป็นผู้นำในการเปลี่ยนแปลงประเทศไปในทางที่ดีตามแบบอย่างพระเยซูคริสต์',
                icon: 'tabler:transform',
            },
            {
                title: 'Grow and Multiply',
                description:
                    ' การเป็นคริสตจักรที่เติบโตและขยายออกไปในกลุ่มคนรุ่นใหม่ โดยเฉพาะในมหาวิทยาลัยต่างๆ ทั่วกรุงเทพฯ และรังสิต',
                icon: 'tabler:seedling',
            },
            {
                title: 'Rooted in Faith, Growing the Next Generation',
                description:
                    'เรามุ่งมั่นที่จะสร้างชุมชนแห่งความเชื่อที่อบอุ่น และช่วยให้คนรุ่นใหม่ได้เติบโตในทางของพระเจ้า',
                icon: 'tabler:cross',
            },
        ]}
    />

