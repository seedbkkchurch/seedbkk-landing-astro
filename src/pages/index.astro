---
import Layout from '~/layouts/PageLayout.astro'

import Hero from '~/components/widgets/Hero.astro'
import Note from '~/components/widgets/Note.astro'
import Features from '~/components/widgets/Features.astro'
import Steps from '~/components/widgets/Steps.astro'
import Content from '~/components/widgets/Content.astro'
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro'
import FAQs from '~/components/widgets/FAQs.astro'
import Stats from '~/components/widgets/Stats.astro'
import CallToAction from '~/components/widgets/CallToAction.astro'
import Image from '~/components/common/Image.astro'
import Steps2 from '~/components/widgets/Steps2.astro'
import CountdownTimer from '~/components/CountdownTimer'

import Button from '~/components/ui/Button.astro'

const appStoreImg = '~/assets/images/app-store.png'
const appStoreDownloadLink = 'https://apps.apple.com/us/app/seed-church/id6654904118'

const googlePlayImg = '~/assets/images/google-play.png'
const googlePlayDownloadLink =
    'https://play.google.com/store/apps/details?id=com.seedchurchthailand.seed&pcampaignid=web_share'

const metadata = {
    title: 'คริสตจักรเมล็ดพันธุ์กรุงเทพ',
    ignoreTitleTemplate: true,
}
---

<Layout metadata={metadata}>
    <!-- Hero Widget ******************* -->

    <Hero
        actions={[
            {
                variant: 'primary',
                text: 'พระเจ้ามีจริงไหม',
                href: 'https://www.seedchurch-thailand.com/%E0%B8%A3-%E0%B8%88-%E0%B8%81%E0%B8%9E%E0%B8%A3%E0%B8%B0%E0%B9%80%E0%B8%88-%E0%B8%B2',
                target: '_blank',
                icon: '',
            },
            {
                text: 'ข้อมูลองค์กรคริสจักร',
                href: 'https://www.seedchurch-thailand.com/%E0%B8%AA%E0%B8%B3%E0%B9%80%E0%B8%99%E0%B8%B2%E0%B8%82%E0%B8%AD%E0%B8%87-%E0%B8%A3-%E0%B8%88-%E0%B8%81%E0%B9%82%E0%B8%9A%E0%B8%AA%E0%B8%96-1',
            },
        ]}
        image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
    >
        <Fragment slot="title">
            <span style="color: var(--aw-color-text-highlight);">คริสตจักร</span>
            <span class="highlight text-green dark:text-white"> เมล็ดพันธุ์</span> กรุงเทพ
        </Fragment>

        <Fragment slot="subtitle">
            <span class="hidden sm:inline">
                <span class="font-semibold text-blue-600">คริสตจักรแห่งการสร้างสาวกและตั้งคริสตจักร</span>
            </span>
            <span class="mb-1 block font-bold text-blue-600 sm:hidden">คริสตจักรแห่งการสร้างสาวกและตั้งคริสตจักร</span>
        </Fragment>
    </Hero>

    <CountdownTimer client:only="react" />
    <Note quote="Note:" text="รอบนมัสการรอบถัดไป วันอาทิตย์ วันอาทิตย์ 14.00" />

    <!-- Features Widget *************** -->
    <Features
        id="features"
        tagline=""
        title="Vision"
        subtitle=""
        items={[
            {
                title: 'Thailand Shall Be Safe',
                description: 'นำพระพรไปสู่คนไทย เพื่อเปลี่ยนแปลงชีวิตคนไทยให้ดึขึ้น',
                // icon: 'tabler:brand-tailwind',
            },
            {
                title: 'Teenatures Shall Be Leaders',
                description:
                    'ปรารถนาที่จะเห็นเยาวชนเป็นผู้นำในการเปลี่ยนแปลงประเทศไปในทางที่ดีตามแบบอย่างพระเยซูคริสต์',
                // icon: 'tabler:brand-tailwind',
            },
        ]}
    />

    <!-- Content Widget **************** -->

    <Content
        isReversed
        tagline="Inside template"
        title="Our Culture"
        items={[
            {
                title: 'เติบโตในการรู้จักพระเจ้า',
                description: 'เราเติบโตผ่านการเฝ้าเดียว อธิฐาน อ่านพระคัมภีร์ นมัสการ การสามัคคีอย่างสม่ำเสมอ',
            },
            {
                title: 'เติบโตขึ้นในพระวิญญานบริสุทธิ์เพื่อเป้าหมายไพบูลย์พระคริสต์',
                description:
                    'กาลาเทีย 5:22 ส่วนผลของพระวิญญาณนั้น คือความรัก ความยินดี สันติสุข ความอดทน ความกรุณา ความดี ความซื่อสัตย์ ความสุภาพอ่อนโยน การรู้จักบังคับตน เรื่องอย่างนี้ไม่มีธรรมบัญญัติห้ามไว้เลย',
            },
            {
                title: 'เติบโตในการใช้ของประทานเพื่อเสริมสร้างคริสตจักรและถวายเกียรติแด่พระเจ้า',
                description: 'เติบโตในการยอมจำนนให้ชีวิตเป็นไปตามแผนการและน้ำพระทันพระเจ้าสำหรับชีวิตของเราแต่ละคน ',
            },
            {
                title: 'เติบโตขึ้นในความรักตามพระมหาบัญญัติ',
                description:
                    'เขาทูลตอบว่า “พวกท่านจงรักองค์พระผู้เป็นเจ้าผู้เป็นพระเจ้าของท่านด้วยสุดใจของท่าน ด้วยสุดจิตของท่าน ด้วยสุดกำลังของท่าน และด้วยสุดความคิดของท่าน และจงรักเพื่อนบ้านเหมือนรักตนเอง',
            },
        ]}
        image={{
            src: '~/assets/images/culture/SpiritualMaturity.jpg',
            alt: 'SpiritualMaturity',
        }}
    >
        <Fragment slot="content">
            <h3 class="mb-2 text-2xl font-bold tracking-tight dark:text-white sm:text-3xl">S = Spiritual Maturity</h3>
            การเติบโตฝ่ายวิญญาณในพระคริสต์
        </Fragment>

        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
        </Fragment>
    </Content>

    <!-- Content Widget **************** -->

    <Content
        isAfterContent
        items={[
            {
                title: 'ประกาศพระกิตติคุณสมบูรณ์',
                description:
                    'และอธิฐานเผื่อคนที่ยังไม่รู้จักพระเจ้าเสมอด้วยหัวใจแห่งความรักและห่วงใยคนที่ยังไม่ได้รับความรอดโดยเริ่มต้นที่คนในครอบครัว',
            },
            {
                title: 'ประกาศข่าวประเสริฐที่มีฤทธิ์เดชในการเปลี่ยนแปลงชีวิต',
                description: 'ปลดปล่อยคนจากบาป  ความทุกข์ ปัญหาต่างๆ เพื่อเราจะเห็นสังคมที่ดีขึ้น',
            },
            {
                title: 'ประกาศข่าวประเสริฐในทุกโอกาส เช่น งานวันเกิด งานแต่งงาน งานอาลัย งานขึ้นบ้านใหม่ และอื่นๆ กับคนทุกเพศ วัย ทุกสถานนะในสังคม',
                description:
                    'ประกาศข่าวประเสริฐโดยการแสดงความรัก ผ่านการช่วยเหลือที่ยากลำบากในสังคม ผ่านมูลนิธิรักเพื่อนบ้าน',
            },
        ]}
        image={{
            src: '~/assets/images/culture/Evergelization.jpg',
            alt: 'Evergelization',
        }}
    >
        <Fragment slot="content">
            <h3 class="mb-2 text-2xl font-bold tracking-tight dark:text-white sm:text-3xl">E = Evergelization</h3>
             ประกาศด้วยใจเชื่อฟังพระมหาบัญชา
        </Fragment>

        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
        </Fragment>
    </Content>

    <!-- Content Widget **************** -->

    <Content
        isReversed
        isAfterContent
        items={[
            {
                title: 'เอเฟซัส 4:11-12',
                description:
                    'เอเฟซัส 1:22-23 พระเจ้า​วาง​ทุก​สิ่ง​ไว้​ใต้เท้า​ของ​พระคริสต์ และ​พระองค์​ตั้ง​พระคริสต์​เป็น​ศีรษะ​เหนือ​ทุกสิ่ง​เพื่อ​หมู่ประชุม​ของ​พระองค์ หมู่​ประชุม​นี้​คือ​ร่างกาย​ของ​พระคริสต์ และ​หมู่​ประชุม​นี้​เต็ม​เปี่ยม​ไป​ด้วย​พระคริสต์ และ​พระคริสต์​ทำให้​ทุกสิ่ง​เต็มเปี่ยม​ไปด้วย​พระองค์',
            },
            {
                title: 'ตั้งคริสตจักรทุกจังหวัดในประเทศไทย และส่งมิชชันนารีออกไปต่างประเทศ',
                description:
                    'ตั้งคริสตจักรที่แข็งแรงโดยวางรากฐานของความเชื่อในพระเยซูคริสต์และตามหลักการพระวจนะของพระเจ้า',
            },
            {
                title: 'ตั้งคริสตจักรใหม่ด้วยการช่วยเหลือและสนับสนุนอย่างน้ำหนึ่งใจเดียวของคริสตจักรที่มีอยู่แล้ว',
                description:
                    'ตั้งคริสตจักรโดยการพึ่งพาการทรงนำจากพระเจ้าและแต่งตั้งผู้นำที่เติบโตฝ่ายวิญญาณมีชีวิตที่เป็ฯแบบอย่าง ในการดูแลคริสตจักร',
            },
        ]}
        image={{
            src: '~/assets/images/culture/EstablishChurch.jpeg',
            alt: 'EstablishChurch',
        }}
    >
        <Fragment slot="content">
            <h3 class="mb-2 text-2xl font-bold tracking-tight dark:text-white sm:text-3xl">E = Establish Church</h3>
            ตั้งคริสตจักรของพระคริสต์ของพระเจ้า ไม่ใช่ของเรา
        </Fragment>

        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
        </Fragment>
    </Content>

    <!-- Steps Widget ****************** -->

    <Steps
        title="D = Discipleship สร้างสาวกแบบพระคริสต์"
