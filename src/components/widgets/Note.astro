---
import { Icon } from 'astro-icon/components'
const { quote, text } = Astro.props
---

<section class="not-prose bg-blue-50 dark:bg-slate-800">
    <div class="text-md mx-auto max-w-6xl px-4 py-4 text-center font-medium sm:px-6">
        <span class="font-bold">
            <Icon name="tabler:info-square" class="inline-block h-5 w-5 align-text-bottom" /> {quote}</span
        >
        {text}
    </div>
</section>
