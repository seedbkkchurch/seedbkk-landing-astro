---
import '@fontsource-variable/inter'
import '@fontsource/sarabun' // 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
    :root {
        --aw-font-sans: 'Sarabun';
        --aw-font-serif: 'Sarabun';
        --aw-font-heading: 'Sarabun';

        --aw-color-primary: rgb(1 97 239);
        --aw-color-secondary: rgb(1 84 207);
        --aw-color-accent: rgb(109 40 217);
        --aw-color-green: #08c54c;

        --aw-color-text-heading: rgb(0 0 0);
        --aw-color-text-default: rgb(16 16 16);
        --aw-color-text-muted: rgb(16 16 16 / 66%);
        --aw-color-bg-page: rgb(255 255 255);
        --aw-color-text-default2: rgb(0 0 0); /* Explicit color for highlighted text */

        --aw-color-bg-page-dark: rgb(3 6 32);

        ::selection {
            background-color: lavender;
        }
    }

    .dark {
        --aw-font-sans: 'Sarabun';
        --aw-font-serif: 'Sarabun';
        --aw-font-heading: 'Sarabun';

        --aw-color-primary: rgb(1 97 239);
        --aw-color-secondary: rgb(1 84 207);
        --aw-color-accent: rgb(109 40 217);
        --aw-color-green: #08c54c;

        --aw-color-text-heading: rgb(247, 248, 248);
        --aw-color-text-default: rgb(229 236 246);
        --aw-color-text-muted: rgb(229 236 246 / 66%);
        --aw-color-bg-page: rgb(3 6 32);
        --aw-color-text-highlight: rgb(247, 248, 248); /* Explicit color for highlighted text in dark mode */

        ::selection {
            background-color: black;
            color: snow;
        }
    }
</style>
